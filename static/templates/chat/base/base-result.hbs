{{#if result.success}}
    <p class="success"><strong>{{localize "CHAT.SUCCESS" degree=result.degree}}</strong></p>
{{else}}
    <p class="failure"><strong>{{localize "CHAT.FAILED" degree=result.degree}}</strong></p>
{{/if}}
{{#if context.focusAllocated}}
    <p><strong>{{localize "CHAT.FOCUS"}}</strong>: {{result.focus}} {{localize "CHAT.FOCUS_APPLIED"}}</p>
{{else if result.focus}}
    <p><strong>{{localize "CHAT.FOCUS"}}</strong>: {{localize "CHAT.FOCUS_AVAILABLE" focus=result.focus}}</p>
{{/if}}