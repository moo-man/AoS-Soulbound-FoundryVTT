{{> systems/age-of-sigmar-soulbound/templates/chat/base/base-result.hbs}}


{{#if result.damage.total}}
    <p><strong>{{localize "CHAT.DAMAGE"}}:</strong> {{result.damage.total}}<button class="apply" data-action="applyDamage"><i class="fa-solid fa-crosshairs"></i> Apply</button><button class="apply" data-tooltip="Ignore Armour" data-action="applyDamage" data-ignore-armour="true"><i class="fa-solid fa-shield-halved"></i></button></p>
{{/if}}

{{#if result.healing.toughness}}
    <p><strong>{{localize "CHAT.TOUGHNESS_HEALED"}}:</strong> {{result.healing.toughness}} <button class="apply" data-action="applyHealing"><i class="fa-solid fa-crosshairs"></i> Apply</button></p>
{{/if}}


{{#if result.duration}}
    <p><strong>{{localize "CHAT.DURATION"}}:</strong> {{result.duration.value}}
        {{result.duration.unit}}
    </p>
{{/if}}

{{#if item.overcasts.length}}
    <p><strong>{{localize "CHAT.OVERCAST"}}:</strong> {{item.OvercastString}}</p>
{{/if}}
