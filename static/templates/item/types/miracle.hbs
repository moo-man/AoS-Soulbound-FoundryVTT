<section class="tab {{tab.cssClass}}" data-group="primary" data-tab="{{tab.id}}">
    <div class="box-section">
        <div class="box-header">{{localize "TITLE.STATS"}}</div>
        <div class="box-row">
            <div class="attribute-box">
                <div class="label" style="grid-column: 1 / span 3">
                    {{localize "MIRACLE.TARGET"}}
                </div>

                <div class="label" style="grid-column: 4 / span 3">
                    {{localize "MIRACLE.RANGE"}}

                </div>
                <div class="label" style="grid-column: 7 / span 3">
                    {{localize "MIRACLE.DURATION"}}
                </div>

                <div class="label" style="grid-column: 10 / span 3">
                    {{localize "MIRACLE.COST"}}
                </div>
                <div class="field" style="grid-column: 1 / span 3">{{formInput fields.target value=source.system.target}}</div>
                <div class="field" style="grid-column: 4 / span 3">{{formInput fields.range value=source.system.range choices=(config "range")}}</div>
                <div class="field" style="grid-column: 7 / span 3">{{formInput fields.duration value=source.system.duration}}</div>
                <div class="field power" style="grid-column: 10 / span 3">{{formInput fields.cost value=source.system.cost}}</div>
            </div>
        </div>
        <div class="box-row">
            {{> itemTest label="MIRACLE.TEST" fields=fields.test.fields values=source.system.test showOpposed=true}}
        </div>
    </div>

    
    <div class="box-section description">
        <div class="box-header">{{localize "TITLE.DESCRIPTION"}}</div>
        <div class="box-editor">
            {{formInput fields.description value=source.system.description enriched=enriched.system.description toggled=true}}
        </div>
    </div>
</section>