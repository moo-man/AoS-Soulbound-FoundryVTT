<section class="tab {{tab.cssClass}}" data-group="primary" data-tab="{{tab.id}}">
    <div class="box-section physical">
        <div class="box-header">{{localize "TITLE.PHYSICAL"}}</div>
        <div class="box-row">
            <div class="attribute-box">
                <div class="label" style="grid-column: 1 / span 4">
                    {{localize "BIO.AGE"}}
                </div>

                <div class="label" style="grid-column: 5 / span 4">
                    {{localize "BIO.HEIGHT"}}

                </div>
                <div class="label" style="grid-column: 9 / span 4">
                    {{localize "BIO.WEIGHT"}}

                </div>

                <div class="field" style="grid-column: 1 / span 4"><input name="system.bio.age" type="text" value="{{system.bio.age}}"></div>
                <div class="field" style="grid-column: 5 / span 4"><input name="system.bio.height" type="text" value="{{system.bio.height}}"></div>
                <div class="field" style="grid-column: 9 / span 4"><input name="system.bio.weight" type="text" value="{{system.bio.weight}}"></div>
            </div>
        </div>
        <div class="box-row">
            <div class="attribute-box">
                <div class="label" style="grid-column: 1 / span 4">
                    {{localize "BIO.EYETYPE"}}
                </div>

                <div class="label" style="grid-column: 5 / span 4">
                    {{localize "BIO.EYES"}}

                </div>
                <div class="label" style="grid-column: 9 / span 4">
                    {{localize "BIO.HAIR"}}

                </div>

                <div class="field" style="grid-column: 1 / span 4"><input name="system.bio.eyeType" type="text" value="{{system.bio.eyeType}}"></div>
                <div class="field" style="grid-column: 5 / span 4"><input name="system.bio.eyes" type="text" value="{{system.bio.eyes}}"></div>
                <div class="field" style="grid-column: 9 / span 4"><input name="system.bio.hair" type="text" value="{{system.bio.hair}}"></div>
            </div>

        </div>
        <div class="box-row">

        <div class="attribute-box">
                <div class="label" style="grid-column: 1 / span 12">
                    {{localize "BIO.DISTINGUISHING_FEATURES"}}
                </div>
                <div class="field" style="grid-column: 1 / span 12"><input name="system.bio.distinguishingFeatures" type="text" value="{{system.bio.distinguishingFeatures}}"></div>

        </div>
        </div>
    </div>

    <div class="box-section">
        <div class="box-header">{{localize "BIO.BACKGROUND"}}</div>
        <div class="box-row">
            <div class="attribute-box">
                <div class="label" style="grid-column: 1 / span 6">
                    {{localize "BIO.FACTION"}}
                </div>

                <div class="label" style="grid-column: 7 / span 6">
                    {{localize "BIO.SUBFACTION"}}
                </div>
                <div class="field" style="grid-column: 1 / span 6"><input name="system.bio.faction" type="text" value="{{system.bio.faction}}"></div>
                <div class="field" style="grid-column: 7 / span 6"><input name="system.bio.subfaction" type="text" value="{{system.bio.subfaction}}"></div>
            </div>
        </div>
        <div class="box-editor">
            {{formInput fields.bio.fields.background value=source.system.bio.background enriched=enriched.system.bio.background toggled=true}}
        </div>
    </div>

    
    <div class="sheet-list">
        <div class="list-label">
            <div class="list-controls"></div>
            <div class="list-title">{{localize "TITLE.GOALS"}}</div>
            <div class="flex"></div>
            <div class="list-controls">
                <a class="list-control" data-action="createItem" data-type="partyItem" data-category="shortGoal"><i class="fas fa-plus"></i></a>
            </div>
        </div>
        <div class="list-content">
            {{#each items.partyItem}}
                <div class="list-row" data-uuid="{{this.uuid}}" data-id="{{this.id}}">
                    <div class="row-content">
                        <div class="list-name">
                            {{#if this.system.state}}
                                <a class="state completed active" data-action="toggleProperty" data-path="system.state" data-tooltip="GOAL.COMPLETED"><i class="far fa-check-circle"></i></a>
                            {{else}}
                                <a class="state" data-action="toggleProperty" data-path="system.state" data-tooltip="GOAL.IN_PROGRESS"><i class="far fa-circle"></i></a>
                            {{/if}}
                            <a class="label" data-action="editEmbedded">{{this.name}}</a>
                        </div>
                            <div class="flex">
                                {{this.Category}}
                            </div>
                        <div class="list-controls">
                            <a class="list-control context-menu"><i class="fa-regular fa-ellipsis-vertical"></i></a>
                        </div>
                    </div>
                    {{> sheetButtons document=this}}
                </div>
            {{/each}}
        </div>
    </div>

    <div class="box-section">
        <div class="box-header">{{localize "TITLE.CONNECTIONS"}}</div>
        <div class="box-editor">
            {{formInput fields.bio.fields.connections value=source.system.bio.connections enriched=enriched.system.bio.connections toggled=true}}
        </div>
    </div>

</section>