<div class="item-list">
    <div class="item-header">
        <h1 class="header-text">{{localize "TITLE.SHORT_GOALS"}}</h1>
        <a class="item-create absolute" data-tooltip="Add Goal" data-type="partyItem" data-category="shortGoal"><i
                class="fas fa-plus"></i></a>
    </div>
    {{#each party.shortGoals as |item|}}
        <div class="item" data-item-id="{{item.id}}">
            <div class="item-content">
                {{#if item.state}}
                    <a class="state item-property fit completed active" data-tooltip="{{localize 'GOAL.COMPLETED'}}"><i
                            class="far fa-check-circle"></i></a>
                {{else}}
                    <a class="state item-property fit" data-tooltip="{{localize 'GOAL.IN_PROGRESS'}}"><i
                            class="far fa-circle"></i></a>
                {{/if}}
                <div class="item-property item-name">
                    <a class="item-edit">{{item.name}}</a>
                </div>
                <div class="item-controls">
                    <a class="item-control item-edit"><i class="fas fa-edit"></i></a>
                    <a class="item-control item-delete"><i class="fas fa-trash"></i></a>
                </div>
            </div>
            <div class="item-content">
                <div class="item-property description dropdown-target">{{{lookup ../enrichment item.id}}}</div>
            </div>
        </div>
    {{/each}}
</div>
<hr>
