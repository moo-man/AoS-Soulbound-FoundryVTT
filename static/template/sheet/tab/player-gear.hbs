<div style="display:flex; flex-direction:row;">
    <div class="content-box" style="margin:0px 16px 0px 0px">
        <div class="content-header">
            <h1>{{localize "TITLE.CURRENCIES"}}</h1>
        </div>
        <div class="content-row">
            <div class="entry-vertical">
                <h3>{{localize "CURRENCY.SPHERES"}}</h3>
                <input name="system.currencies.spheres" type="number" value="{{system.currencies.spheres}}"
                    data-dtype="Number" />
            </div>
            <div class="entry-vertical">
                <h3>{{localize "CURRENCY.PHIALS"}}</h3>
                <input name="system.currencies.phials" type="number" value="{{system.currencies.phials}}"
                    data-dtype="Number" />
            </div>
            <div class="entry-vertical">
                <h3>{{localize "CURRENCY.DROPS"}}</h3>
                <input name="system.currencies.drops" type="number" value="{{system.currencies.drops}}"
                    data-dtype="Number" />
            </div>
        </div>
    </div>
    <div class="content-box power">
        <div class="content-header">
            <h1>{{localize "TITLE.ENERGY"}}</h1>
        </div>
        <div class="content-row">
            <div class="entry-vertical">
                <h3>{{localize "POWER.STATUS" consumed=system.power.consumed capacity=system.power.capacity}}</h3>
            </div>
        </div>
        <div class="content-row">
            <div class="entry-vertical">
                <div class="power-bar-container">
                    <div class="power-bar-progress {{system.power.state}}" style="width:{{system.power.pct}}%"></div>
                </div>
            </div>
            {{> scriptButtons item=item}}
            {{> independentButtons item=item}}

        </div>
    </div>
</div>
<hr>

<div class="item-list">
    <div class="item-header">
        <h1 class="header-text">{{localize "TITLE.WEAPONS"}}</h1>
        <a class="item-create absolute" data-tooltip="Add Weapon" data-type="weapon"><i class="fas fa-plus"></i></a>
        <div class="header-columns">
            <div class="item-property item-name">{{localize "WEAPON.NAME"}}</div>
            <div class="item-property">{{localize "WEAPON.DAMAGE"}}</div>
            <div class="item-property flex">{{localize "WEAPON.TRAITS"}}</div>
            <div class="item-property">{{localize "EQUIPMENT.QUANTITY"}}</div>
            <div class="item-property">{{localize "EQUIPMENT.EQUIPPED"}}</div>
            <div class="item-controls"></div>
        </div>
    </div>
    {{#each items.weapons as |item|}}
        <div class="item" data-item-id="{{item.id}}">
            <div class="item-content">
                <div class="item-property item-name">
                    <div class="item-image">
                        <img src={{item.img}} />
                    </div>
                    <a class="item-edit item-dropdown-right">{{item.name}}</a>
                </div>
                <div class="item-property">{{item.Damage}}</div>
                <div class="item-property flex">{{{arrayDisplay item.Traits "item-trait"}}}</div>
                <div class="item-property">
                    <a class="quantity-click">{{item.system.quantity}}</a>
                </div>
                <div class="item-property">
                    {{#if item.equipped}}

                        <a class="item-toggle" data-target="system.equipped"><i class="far fa-check-circle"></i></a>
                    {{else}}
                        <a class="item-toggle" data-target="system.equipped"><i class="far fa-circle"></i></a>
                    {{/if}}
                </div>
                <div class="item-controls">
                    <a class="item-control item-edit"><i class="fas fa-edit"></i></a>
                    <a class="item-control item-post"><i class="fas fa-comment"></i></a>
                    <a class="item-control item-dropdown"><i class="fas fa-chevron-down"></i></a>
                    <a class="item-control item-delete"><i class="fas fa-trash"></i></a>
                </div>
            </div>
            {{> scriptButtons item=item}}
            {{> independentButtons item=item}}

        </div>
    {{/each}}
</div>
